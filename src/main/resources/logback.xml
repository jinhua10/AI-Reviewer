<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- 日志格式：时间 [级别] 类名:行号 - 消息 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%level] %logger{36}:%line - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 文件输出（可选） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/ai-reviewer.log</file>
        <encoder>
            <!-- 文件日志包含更详细信息：时间 [线程] [级别] 类名:行号 - 消息 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] [%level] %logger{50}:%line - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- 按天滚动 -->
            <fileNamePattern>logs/ai-reviewer.%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- 保留30天 -->
            <maxHistory>30</maxHistory>
        </rollingPolicy>
    </appender>

    <!-- 异步输出（提高性能） -->
    <appender name="ASYNC_CONSOLE" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="CONSOLE" />
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
    </appender>

    <!-- 根日志级别 -->
    <root level="INFO">
        <appender-ref ref="ASYNC_CONSOLE" />
    </root>

    <!-- AI-Reviewer 核心包日志 -->
    <logger name="top.yumbo.ai.reviewer" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- 黑客松相关日志 -->
    <logger name="top.yumbo.ai.reviewer.application.hackathon" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- AST解析器日志（如果需要调试可以改为DEBUG） -->
    <logger name="top.yumbo.ai.reviewer.adapter.output.ast" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- AI服务日志 -->
    <logger name="top.yumbo.ai.reviewer.adapter.output.ai" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <!-- 第三方库日志级别 -->
    <logger name="org.eclipse.jgit" level="WARN" />
    <logger name="software.amazon.awssdk" level="WARN" />
    <logger name="org.apache" level="WARN" />
    <logger name="com.squareup.okhttp3" level="WARN" />
    <logger name="com.google.inject" level="WARN" />

</configuration>

